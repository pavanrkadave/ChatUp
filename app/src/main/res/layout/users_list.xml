<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_list_image"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_margin="8dp"
                android:src="@drawable/account" />

            <TextView
                android:id="@+id/user_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/user_list_image"
                android:layout_margin="4dp"
                android:layout_toEndOf="@+id/user_list_image"
                android:text="Display Name"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_list_name"
                android:layout_margin="4dp"
                android:layout_toEndOf="@+id/user_list_image"
                android:text="Hi There! I'm using ChatUp!"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>